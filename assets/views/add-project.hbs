<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Alice|Open+Sans:400,300,700">
  <link rel="stylesheet" href="../assets/styles/custom-style.css">
  <title>Document</title>
</head>
    <body>
      {{#if messages.error}}
      <div class="alert alert-danger popup " role="alert">{{messages.error}}</div>
      {{/if}} 
     {{>logbutton}}  
     {{> header}}

     {{> navbar}}

     <div class="form">
        <div class="form-container">
          <h2>ADD PROJECT</h2>
          <form name="form-project" method="post" action="/project/add" enctype="multipart/form-data">
            <div class="form-group">
              <label>Project Name</label>
              <input name="title" type="text" placeholder="Enter project name" required>
            </div>
            <div class="form-group-inline">
              <div class="form-group">
                <label>Start Date</label>
                <input name="start_date" type="date" required>
                </div>
                <div class="form-group">
                <label>End Date</label>
                <input name="end_date" type="date" required>
            </div>
            </div>
            <div class="form-group">
              <label>Description</label>
              <textarea name="description" rows="4" placeholder="Enter project description" required></textarea>
            </div>
            <div class="form-group">
              <label>Technologies</label>
              <div class="checkbox-group">
                <label><input type="checkbox" name="technologies" value="Node.js"> Node Js</label>
                <label><input type="checkbox" name="technologies" value="Next.js"> Next Js</label>
                <label><input type="checkbox" name="technologies" value="React.js"> React Js</label>
                <label><input type="checkbox" name="technologies" value="TypeScript"> TypeScript</label>
              </div>
            </div>
            <div class="form-group">
              <label>
              <p>Upload Image</p>
              </label>
              <div class="upload-button">
              <input name="image" type="file" accept="image/*" required>
                </div>
            </div>
            <button type="submit" name="submit-button" class="submit-button" >Submit</button>
            </form>
          </div>
        </div>


     {{> footer}}


    </body>
<script src="/assets/scripts/utils/script.js"></script>
<script src="/assets/scripts/utils/navbar.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</html>