<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Alice|Open+Sans:400,300,700">
  <link rel="stylesheet" href="../assets/styles/custom-style.css">
  <title>Document</title>
</head>
    <body>

     {{> header}}

     {{> navbar}}

     <div class="form">
        <div class="form-container">
        <h2>ADD PROJECT</h2>
        <form method="post" onsubmit="'/add-project" id="form-project">
        <div class="form-group">
        <label for="project-name">Project Name</label>
        <input name="name" type="text" placeholder="Enter project name" required>
        </div>
        <div class="form-group-inline">
        <div class="form-group">
        <label for="start-date">Start Date</label>
        <input name="startDate" type="date" required>
        </div>
        <div class="form-group">
        <label for="end-date">End Date</label>
        <input name="endDate" type="date" required>
        </div>
        </div>
        <div class="form-group">
        <label for="description">Description</label>
        <textarea name="description" rows="4" placeholder="Enter project description" required></textarea>
        </div>
        <div class="form-group">
        <label>Technologies</label>
        <div class="checkbox-group">
        <label><input type="checkbox" name="technologies" value="Node.js"> Node Js</label>
        <label><input type="checkbox" name="technologies" value="Next.js"> Next Js</label>
        <label><input type="checkbox" name="technologies" value="React.js"> React Js</label>
        <label><input type="checkbox" name="technologies" value="TypeScript"> TypeScript</label>
        </div>
        </div>
        <div class="form-group">
        <label for="upload-image">
        <p>Upload Image</p>
        </label>
        <div class="upload-button">
        <input name="uploadImage" type="file" accept="image/*" required>
        </div>
        </div>
        <button type="submit" name="submit-button" class="submit-button">Submit</button>
        </form>
        </div>
        </div>


     {{> footer}}


    </body>
<script src="/assets/script/script.js"></script>
<script src="/assets/script/add-project.js"></script>
<script src="/assets/script/navbar.js"></script>
</html>